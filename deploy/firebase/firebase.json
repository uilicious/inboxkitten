{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/v1/mail/**",
        "function": "firebase_api_v1"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
